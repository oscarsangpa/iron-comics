
<body>
  <div>
    {{!-- <img src="image/logoIronComic_final copia.png" class="logo-login_register"/> --}}
    {{!-- <img src="/image/logoIronComic_final_hexagono copia.png" class="logo-login_register"/> --}}
    <img src="/image/logoIronComic_final_sinHexagono_letrasNaranjas copia.png" class="logo-login_register"/>
  </div>
  <div class="bocadillo-redondo-register">
    <div id="login">
      <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
          <div id="login-column" class="col-md-6">
            <div id="login-box" class="col-md-12">
              <form id="login-form" class="form" action="" method="post">
                  <br>
                  <h3 class="text-center #color-text">Register</h3>
                  <br>
                  <form action="/register" method="post" class="form-group">
                      <label for="username" class="#color-text">Username:</label>
                      <input type="text" name="name" id="username" class="form-control {{#if errors.name}}is-invalid{{/if}}">
                      {{#if errors.name}}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}}
                  
                      <label class="#color-text">Email:</label><br>
                      <input type="text" name="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" placeholder="user@example.com">
                      {{#if errors.email}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
                
                      <label class="#color-text">Password:</label>
                      <input type="password" name="password" class="password-toggle form-control {{#if errors.password}}is-invalid{{/if}}">
                      {{#if errors.password}}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
                      <i class="fa fa-eye-slash fa-fw"></i>
                      <br>
                  <div class="form-group centrar" id="arrejuntar">
                      <input type="submit" class="btn btn-info btn-md" id="button-color-red" value="Register">
                      <button class="google-button mt-2">
                        <a href="/login/google">
                        <i class="fa fa-google"></i>
                        Login with Google</a>
                        </button>
                  </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>


