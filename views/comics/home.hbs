{{!-- {{user.name}} --}}


  <div class="row mx-auto" id="containerNodriza">
    {{#each comics as |comic|}}
    <div class="col-xl-2 col-sm-6 col-xs-12 gy-4 d-flex containerInfoComic">
      <div class="card w-100 " id="containerIndividual" style="width: 18rem">
        <div class="position-relative"> 
          {{!-- ESTA LINEA ESTÁ COMENTADA!!!! //if comic.images.lentg -> img src= comic.images.0.value
          //else if comic.thumbnails.length --}}
          <div class="containerPortada">
            <a href="/detail-comic">
              {{!-- ESTA LINEA ESTÁ COMENTADA!!!! <img src="{{comic.thumbnail.path}}/portrait_medium.jpg" alt="img-comic"/> --}}
              <img class="portada" src="{{comic.thumbnail.path}}.{{comic.thumbnail.extension}}" alt="{{comic.title}}"/>
            </a>
          </div>
          <h6>{{comic.title}}</h6>       
          <div class="divBotonDetail">
            <button class="botonDetail" id="botonDetail" style="with:100% !important" >
              <a href="/detail-comic/{{comic.id}}">Details</a>
            </button>
          </div>
        </div>    
      </div>
    </div>   
    {{/each}}
  </div>

