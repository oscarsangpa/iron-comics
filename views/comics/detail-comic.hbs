<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{comic.image}}" class="img-fluid rounded-start "  alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{comic.title}}</h5>
        <p class="card-text">{{comic.description}}</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
      <button type="button" id="favorites" class="btn btn-success mb-4 ml-5 mr-2">favorites</button>
      <button type="button" id="watched" class="btn btn-warning mb-4 ml-4">watched</button>
    </div>
  </div>
</div>

